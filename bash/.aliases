#!/bin/bash

# System
alias df='df -Th --total'
alias du='du -ch'
alias dua='du -a --max-depth=1 | sort -h'
alias free='free -ht'
alias grep='grep --color=auto'
alias ls='ls -F --color=auto --group-directories-first'
alias ll='ls -lAh'
alias mkd='mkdir -pv'
alias psa='ps -e -o pid,euser,pcpu,pmem,command'
alias pwo='poweroff'
alias rm='rm --preserve-root -I'
alias tree='tree -F -C --dirsfirst'

# Development
alias ipy='ipython --no-confirm-exit'
alias py='python3'
alias vi='/usr/bin/vim'
alias vim='nvim'
alias nvimrc='vim ~/.config/nvim/init.vim'

# Network
alias ip='ip -c -h'
alias ipa='ip -br address'
alias ipl='ip -br link'
alias ssp='ss -lnptu'

# Shortcuts
alias dl='cd ~/Downloads && ls'
alias doc='cd ~/Documents && ls'
alias tmp='cd ~/.tmp && ls'
