\newcommand{\pic}[4]{
    \begin{figure}[ht]
        \centering
        \includegraphics[width=#2\textwidth]{#1}
        \caption{#3}
        \label{fig:#4}
    \end{figure}
}

\newcommand{\subpic}[4]{
    \begin{subfigure}[b]{#2\textwidth}
        \centering
        \includegraphics[width=\linewidth]{#1}
        \subcaption{#3}
        \label{fig:#4}
    \end{subfigure}
}

