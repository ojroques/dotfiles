\newcommand{\pic}[4]{
\begin{figure}[ht]
    \centering
    \includegraphics[width=#2\textwidth]{#1}
    \caption{#3}
    \label{fig:#4}
\end{figure}
}

\newcommand{\subpic}[4]{
    \subfloat[#3]{
        \includegraphics[width=#2\textwidth]{#1}
        \label{fig:#4}
    }
}

