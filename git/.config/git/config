[alias]
  a = add
  cm = commit
  cma = commit --amend
  co = checkout
  d = diff --ext-diff
  dc = diff --cached --ext-diff
  i = show --abbrev-commit --date=iso --ext-diff
  l = log --graph --format='%C(yellow)%h%Cred%d %Creset%s %Cgreen(%ar) %Cblue%an%Creset'
  pl = pull
  ps = push
  rb = rebase
  rs = reset
  s = status
  ua = restore --staged

[column]
  ui = auto

[diff]
  algorithm = histogram
  external = difft
  mnemonicPrefix = true

[fetch]
  all = true
  prune = true
  pruneTags = true

[init]
  defaultBranch = main

[include]
  path = personal

[includeIf "gitdir:~/Work/"]
  path = work

[merge]
  conflictstyle = zdiff3
  tool = nvimdiff3

[mergetool]
  keepBackup = false

[pull]
  rebase = true

[push]
  autosetupremote = true

[user]
  useConfigOnly = true
