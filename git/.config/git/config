[user]
  useConfigOnly = true

[init]
  defaultBranch = "main"

[include]
  path = "personal"

[includeIf "gitdir:~/Work/"]
  path = "work"

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  line-numbers = true
  navigate = true
  syntax-theme = none

[alias]
  a = add
  cm = commit
  cma = commit --amend
  co = checkout
  d = diff
  dc = diff --cached
  ds = diff --compact-summary
  i = show --abbrev-commit --date=iso
  l = log --abbrev-commit --date=human
  lg = log --graph --format='%C(yellow)%h%Cred%d %Creset%s %Cgreen(%ar) %Cblue%an%Creset'
  lga = log --graph --all --format='%C(yellow)%h%Cred%d %Creset%s %Cgreen(%ar) %Cblue%an%Creset'
  rb = rebase
  rs = reset
  s = status
  sw = update-index --skip-worktree
  swn = update-index --no-skip-worktree
  ua = restore --staged

[fetch]
  prune = true

[merge]
  conflictstyle = diff3

[pull]
  rebase = true
