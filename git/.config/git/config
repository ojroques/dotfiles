[alias]
  a = add
  cm = commit
  cma = commit --amend
  co = checkout
  d = diff
  dc = diff --cached
  i = show --abbrev-commit --date=iso
  l = log --graph --format='%C(yellow)%h%Cred%d %Creset%s %Cgreen(%ar) %Cblue%an%Creset'
  pl = pull
  ps = push
  rb = rebase
  rs = reset
  s = status
  ua = restore --staged

[column]
  ui = auto

[core]
  pager = delta

[delta]
  line-numbers = true
  navigate = true

[diff]
  algorithm = histogram
  colorMoved = true
  colorMovedWS = allow-indentation-change
  mnemonicPrefix = true

[fetch]
  all = true
  prune = true
  pruneTags = true

[init]
  defaultBranch = main

[include]
  path = personal

[includeIf "gitdir:~/Work/"]
  path = work

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictstyle = zdiff3
  tool = nvimdiff3

[mergetool]
  keepBackup = false

[pull]
  rebase = true

[push]
  autosetupremote = true

[rebase]
  updateRefs = true

[user]
  useConfigOnly = true
