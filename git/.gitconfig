; git config
; github.com/ojroques

[user]
  useConfigOnly = true
  name = Olivier Roques
  ; email =

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = diff-so-fancy line-numbers
  file-modified-label = modified:
  hunk-header-decoration-style = blue box
  line-numbers-minus-style = red
  line-numbers-plus-style = green
  line-numbers-zero-style = 244

[alias]
  a = add
  cm = commit
  cma = commit --amend
  co = checkout
  d = diff
  dc = diff --cached
  ds = diff --compact-summary
  i = show --abbrev-commit --date=iso
  l = log --abbrev-commit --date=human
  lg = log --graph --format='%C(yellow)%h%Cred%d %Creset%s %Cgreen(%ar) %Cblue%an%Creset'
  lga = log --graph --all --format='%C(yellow)%h%Cred%d %Creset%s %Cgreen(%ar) %Cblue%an%Creset'
  ls = ls-tree --full-tree --name-only -r HEAD
  rb = rebase
  rs = reset
  s = status
  ua = restore --staged

[fetch]
  prune = true

[pull]
  rebase = true

[merge]
  tool = vimdiff
